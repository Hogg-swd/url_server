<div class="card text-center">
  <div class="card-header">Register Your HCoin Node</div>
  <div class="card-body">
    <form action="/urls" method="POST">
          <div class="form-group">
          <input type="text" class="form-control" placeholder="Node url" name="url">
          </div>
          <div class="form-group">
          <input type="text" class="form-control" placeholder="Public key" name="pk">
          </div>
          <button type="submit" class="btn btn-primary">Register</button>
        </form>
  </div>
  <div class="card-footer text-muted"></div>
</div>

<div class="card text-center">
  <div class="card-header"><h4>urls</h4>
  </div>
  <div class="card-body">
    <% urls.forEach(url => { %>
      <p class="card-text"><%= JSON.stringify(url)%></p>
    <% }) %>
  </div>
  <div class="card-footer text-muted">
    HCoin Server
  </div>
</div>
